<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <h4 class="mb-3">Create a new service</h4>
        <form method="post" action="/services">
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input class="form-control" name="title" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="5" required></textarea>
          </div>
          <div class="row">
            <div class="col-md-4 mb-3">
              <label class="form-label">Base Rate (USD)</label>
              <input type="number" step="0.01" min="0" class="form-control" name="baseRate" required />
            </div>
            <div class="col-md-4 mb-3">
              <label class="form-label">Incentive Type</label>
              <select class="form-select" name="incentiveType" required>
                <option value="milestone">Milestone</option>
                <option value="performance">Performance</option>
                <option value="referral">Referral</option>
              </select>
            </div>
            <div class="col-md-4 mb-3">
              <label class="form-label">Incentive Details</label>
              <input class="form-control" name="incentiveDetails" placeholder="e.g., 10% bonus on success" />
            </div>
          </div>
          <button class="btn btn-primary">Create</button>
        </form>
      </div>
    </div>
  </div>
</div>


