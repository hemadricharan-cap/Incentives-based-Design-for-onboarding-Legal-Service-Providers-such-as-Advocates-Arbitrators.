<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Available Legal Services</h3>
  <% if (currentUser && currentUser.role === 'provider') { %>
    <a href="/services/new" class="btn btn-primary">Create Service</a>
  <% } %>
  
</div>

<div class="row g-4">
  <% services.forEach(s => { %>
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= s.title %></h5>
          <div class="small text-muted mb-2">by <%= s.provider_name %></div>
          <p class="card-text flex-grow-1"><%= s.description.substring(0, 120) %>...</p>
          <div class="d-flex justify-content-between align-items-center mt-2">
            <span class="badge bg-secondary">Base: $<%= s.base_rate %></span>
            <span class="badge bg-info text-dark">Incentive: <%= s.incentive_type %></span>
          </div>
          <a href="/services/<%= s.id %>" class="btn btn-outline-primary mt-3">View</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>


